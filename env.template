# Eindr Email Capture API - Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration (Railway automatically provides DATABASE_URL)
# For Railway: DATABASE_URL is automatically set by Railway PostgreSQL service
# Format: postgresql+psycopg://user:password@host:port/database
DATABASE_URL=postgresql+psycopg://postgres:admin123@localhost/eindr_lp

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration (adjust for production)
CORS_ORIGINS=["*"]  # In production, specify your frontend domains
CORS_ALLOW_CREDENTIALS=true
CORS_METHODS=["GET", "POST", "OPTIONS"]
CORS_HEADERS=["*"]

